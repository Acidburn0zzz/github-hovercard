{
  "manifest_version": 2,
  "name": "GitHub Hovercard",
  "description": "Quick user hovercard for GitHub.",
  "version": "0.0.4",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "spinner.svg"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://github.com/*",
        "https://github.com/*"
      ],
      "js": [
        "jquery.js",
        "mustache.js",
        "tooltipster.js",
        "hovercard.js"
      ],
      "css": [
        "tooltipster.css",
        "hovercard.css"
      ]
    }
  ]
}